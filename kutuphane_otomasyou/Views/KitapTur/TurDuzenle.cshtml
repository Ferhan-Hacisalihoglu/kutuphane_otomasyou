@model kutuphane_otomasyou.Models.table.kitaplar.KitapTuru

@{
    ViewBag.Title = "TurDuzenle";
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    <h1 style="text-align:center">Kitap Bilgilerini Düzenleyin</h1>
    <hr />

    @using (Html.BeginForm())
    {



        <div style="display: flex; justify-content: center; align-items: center;">
            <div style="width:300px   ">

                <div class="input-group mb-3">
                    <span class="input-group-text" id="basic-addon1">Kitap Adı</span>
                    @Html.TextBoxFor(x => x.tur_adi, new { @class = "form-control", @maxlength = "50" })
                </div>

                @if (TempData["bos"] != null)
                {
                    <p style="color: red;text-align:center">Lütfen bütün kutulari doldurun veya en az bir kutuyu değiştirin </p>
                }

                <div style="display: flex; justify-content: center; align-items: center;">
                    <input type="submit" value="Güncelle" class="btn btn-primary " style="margin-right: 10px;" />
                </div>


            </div>
        </div>
        <br />
    }
</body>
</html>

